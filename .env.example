# Discord設定（ブラウザ自動化用）
# Discordアカウントのメールアドレス
DISCORD_EMAIL=your_discord_email@example.com

# Discordアカウントのパスワード
DISCORD_PASSWORD=your_discord_password

# 取得したいチャンネルのURL
DISCORD_CHANNEL_URL=https://discord.com/channels/xxx/yyy

# Claude API設定
ANTHROPIC_API_KEY=sk-ant-xxx

# Gmail設定
# Gmailアドレス
GMAIL_ADDRESS=your_email@gmail.com

# Gmailアプリパスワード（2段階認証が必要）
# https://myaccount.google.com/apppasswords で生成
GMAIL_APP_PASSWORD=xxxx xxxx xxxx xxxx

# 送信先メールアドレス
RECIPIENT_EMAIL=recipient@example.com

# スケジュール設定 (24時間形式)
SCHEDULE_HOUR=9
SCHEDULE_MINUTE=0
